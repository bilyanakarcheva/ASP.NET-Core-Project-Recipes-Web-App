@model RecipeSearchViewModel

@if (Model == null)
{
    <div class="jumbotron">
        <h1 class="display-4">Welcome to Tasty Bits!</h1>
        <p class="lead">Enjoy the best experience in the culinary world!</p>
        <hr class="my-4">
        <p>There are currently no recipes available. Would you like to add one?</p>
        <p class="lead">
            <a class="btn btn-primary btn-lg" asp-controller="Recipes" asp-action="Add" role="button">Add Recipe</a>
        </p>
    </div>
}
else
{
    <form method="get">
        <div class="row">
             <div class="form-group col-md-3" style="block-inline">
                 <label asp-for="SearchWord"></label>
                 <input asp-for="SearchWord" class="form-control" placeholder="Chicken noodle soup, etc.">
             </div>
             <div class="form-group col-md-3">
                 <label asp-for="Sorting"></label>
                 <select asp-for="Sorting" class="form-control">
                    <option value="0" selected>Newest</option>
                    <option value="1">Oldest</option>
                    <option value="2">A-Z</option>
                    <option value="3">Z-A</option>
                 </select>
              </div>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
    <div class="text-center">
        <h1 class="display-4" style="padding:15px">All Recipies</h1>
    </div>
    <div  style="margin-left:60px">
        @foreach (var recipe in Model.Recipes)
        {
            <div class="card inline-blocks" style="width: 18rem; display: inline-block; position:center; margin:12px"
            margin-block: auto;>
              <img class="card-img-top" src="@recipe.ImageUrl" alt="@recipe.Title">
              <div class="card-body">
                <h5 class="card-title">@recipe.Title</h5>
                <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
                <a asp-controller="Recipe" asp-action="Details" asp-route-id="@recipe.Id" class="btn btn-primary" style="cursor: pointer">Details</a>
              </div>
            </div>
        }
    </div>
}
